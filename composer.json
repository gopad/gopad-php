{
    "name": "gopad/gopad",
    "type": "library",
    "description": "etherpad for markdown with go",
    "keywords": ["etherpad", "markdown"],
    "homepage": "https://gopad.webhippie.de",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Thomas Boerger",
            "email": "thomas@webhippie.de"
        }
    ],
    "require": {
        "php": ">=7.0.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Gopad\\": "lib/Gopad"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gopad\\Tests\\": "tests/Gopad/Tests"
        }
    },
    "scripts": {
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"]
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false
        }
    }
}
